fieldset
  .form-top
    .form-top-left
      h3 Step 2 / 3
      p Set up your account:
    .form-top-right
      i.fa.fa-key
  .form-bottom
    
    each field in B
      if(field.type == "input")
        .form-group.input-group-lg
          label.sr-only(for="form-#{field.class}") #{field.title}
          input(
            type='text', 
            id="form-#{field.class}", 
            name='form-#{field.class}', 
            placeholder='#{field.title}', 
            class="form-#{field.class} form-control"
          )
      if(field.type == "multi-choice")
        .form-group
          label #{field.title}
          each option in field.options
            input(type="radio", name="#{field.class}", value="#{option}")
            #{option}
            br
    
    button.btn.btn-previous(type='button') Previous
    button.btn.btn-next(type='button') Next
